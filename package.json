{
  "name": "react-guide",
  "description": "Learning React from documentations, YouTube, Udemy and etc.",
  "keywords": [
    "React-Router-Dom",
    "Firebase"
  ],
  "author": "Coding Sable",
  "license": "ISC",
  "private": true,
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "react-guide"
  },
  "type": "module",
  "main": "main.tsx",
  "engines": {
    "pnpm": ">= 8.10.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run lint && pnpm run jest"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "prepare": "husky install",
    "json": "json-server --watch src/data/db.json --port 3001",
    "dev:concurrent": "concurrently \"pnpm:dev\" \"pnpm:json\"",
    "test:concurrent": "concurrently \"pnpm:test\" \"pnpm:lint\""
  },
  "dependencies": {
    "firebase": "8.10.0",
    "localforage": "1.10.0",
    "match-sorter": "6.3.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "6.22.3",
    "sort-by": "1.2.0"
  },
  "devDependencies": {
    "@types/autoprefixer-core": "5.1.34",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-prettier": "3.1.3",
    "@types/jsdom": "^21.1.6",
    "@types/json-server": "0.14.7",
    "@types/lodash": "^4.17.0",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@types/react-router-dom": "5.3.3",
    "@types/sort-by": "^1.2.3",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react-swc": "^3.6.0",
    "autoprefixer": "10.4.18",
    "axios": "1.6.7",
    "concurrently": "8.2.2",
    "cssnano": "6.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "husky": "9.0.11",
    "jsdom": "24.0.0",
    "json-server": "1.0.0-alpha.23",
    "lodash": "4.17.21",
    "postcss": "8.4.35",
    "prettier": "3.2.5",
    "sass": "1.72.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vite-plugin-checker": "0.6.4",
    "vite-plugin-eslint": "1.8.1",
    "vite-plugin-image-optimizer": "1.1.7",
    "vite-plugin-svg-icons": "2.0.1",
    "vite-plugin-svgr": "4.2.0",
    "vitest": "1.3.1"
  }
}
